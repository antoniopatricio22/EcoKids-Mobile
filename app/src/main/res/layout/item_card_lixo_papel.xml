<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E1E7FF"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lixo de Papel"
        android:fontFamily="@font/irish_grover"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1E3B87" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/irish_grover"
        android:text="Inclui jornais, revistas, caixas e folhas de papel. Sempre que puder, dobre e coloque no lixo azul!"
        android:textSize="15sp"
        android:textColor="#393F59" />
</LinearLayout>
