<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DCFCE7"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lixo de Vidro"
        android:fontFamily="@font/irish_grover"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#105C3E" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/irish_grover"
        android:text="Garrafas, potes e copos quebrados vão no lixo verde. Cuidado ao manusear para não se cortar!"
        android:textSize="15sp"
        android:textColor="#393F59" />
</LinearLayout>
