<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FBE6C9"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lixo Orgânico"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/eco_text_dark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="São restos de comida, cascas de frutas, verduras e folhas. Eles podem virar adubo e ajudar novas plantas a crescerem!"
        android:textSize="15sp"
        android:textColor="@color/eco_text_dark" />
</LinearLayout>
